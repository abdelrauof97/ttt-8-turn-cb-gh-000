#!/usr/bin/env ruby

require_relative "../lib/turn"

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)
  index = input_to_index(gets.strip)
valid_move?(board, "#{index}".to_i)
turn(board, "#{index}".to_i)
turn(board, "#{index}".to_i)

move(board, "#{index}".to_i, "X")
display_board(board)
